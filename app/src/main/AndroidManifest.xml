<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.firefly1126.permissionaspect.demo"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>

    <application
        android:name=".AOPApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.firefly1126.permissionaspect.demo.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.firefly1126.permissionaspect.demo.FragmentActivity" android:exported="false" android:screenOrientation="portrait"/>
        <activity android:name="com.firefly1126.permissionaspect.demo.BActivity" android:exported="false" android:screenOrientation="portrait"/>
        <activity android:name="com.firefly1126.permissionaspect.demo.CActivity" android:exported="false" android:screenOrientation="portrait"/>
    </application>

</manifest>